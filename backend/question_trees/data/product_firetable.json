        {
            "id": "finish",
            "text": "What finish?",
            "type": "choice",
            "options": ["Brushed stainless (standard for FireTable Pro)", "Mirror polished stainless", "Powder coat over steel", "Patina / aged corten"],
            "required": true,
            "hint": "Brushed stainless is standard for the FireTable Pro line.",
            "depends_on": null,
            "branches": null
